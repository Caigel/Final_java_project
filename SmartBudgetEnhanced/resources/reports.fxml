<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ReportController">
  <top>
    <ToolBar fx:id="toolbar">
      <Button text="Home" onAction="#goHome"/>
      <Button text="Transactions" onAction="#gotoTransactions"/>
      <Separator orientation="VERTICAL"/>
      <Label text="Reports" style="-fx-font-size:18px; -fx-font-weight:bold;"/>
      <Pane HBox.hgrow="ALWAYS"/>
      <Label text="Theme"/><ToggleButton fx:id="toggleTheme" text="ðŸŒ™"/>
    </ToolBar>
  </top>
  <center>
    <VBox spacing="16">
      <padding><Insets top="12" right="12" bottom="12" left="12"/></padding>
      <HBox spacing="16">
        <PieChart fx:id="pie" prefWidth="480" prefHeight="420"/>
        <BarChart fx:id="bar" prefWidth="560" prefHeight="420">
          <xAxis><CategoryAxis label="Type"/></xAxis>
          <yAxis><NumberAxis label="Amount"/></yAxis>
        </BarChart>
      </HBox>
    </VBox>
  </center>
</BorderPane>
