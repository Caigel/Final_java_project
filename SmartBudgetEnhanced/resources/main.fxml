<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller">
  <top>
    <ToolBar fx:id="toolbar">
      <Button text="Home" onAction="#goHome"/>
      <Separator orientation="VERTICAL"/>
      <Label text="Transactions" style="-fx-font-size:18px; -fx-font-weight:bold;"/>
      <Pane HBox.hgrow="ALWAYS"/>
      <Label text="Theme"/>
      <ToggleButton fx:id="toggleTheme" text="ðŸŒ™"/>
      <Button fx:id="btnSave" text="Save CSV"/>
    </ToolBar>
  </top>
  <center>
    <VBox spacing="12">
      <padding><Insets top="12" right="12" bottom="12" left="12"/></padding>
      <TitledPane text="Add Transaction" expanded="true">
        <content>
          <GridPane hgap="10" vgap="10">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            <columnConstraints>
              <ColumnConstraints percentWidth="15"/>
              <ColumnConstraints percentWidth="35"/>
              <ColumnConstraints percentWidth="15"/>
              <ColumnConstraints percentWidth="35"/>
            </columnConstraints>
            <Label text="Date:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <DatePicker fx:id="dpDate" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Amount:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
            <TextField fx:id="tfAmount" GridPane.rowIndex="0" GridPane.columnIndex="3" promptText="e.g., 12.34"/>
            <Label text="Category:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="tfCategory" GridPane.rowIndex="1" GridPane.columnIndex="1" promptText="e.g., Groceries"/>
            <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
            <TextField fx:id="tfDescription" GridPane.rowIndex="1" GridPane.columnIndex="3" promptText="optional"/>
            <Label text="Type:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <ChoiceBox fx:id="cbType" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <HBox spacing="10" GridPane.rowIndex="2" GridPane.columnIndex="2" GridPane.columnSpan="2">
              <Button fx:id="btnAdd" text="Add"/>
              <Button fx:id="btnDelete" text="Delete Selected"/>
            </HBox>
          </GridPane>
        </content>
      </TitledPane>
      <HBox spacing="10"><Label text="Search:"/><TextField fx:id="tfSearch" promptText="category, description, type, date" prefWidth="320"/></HBox>
      <TableView fx:id="table" prefHeight="420">
        <columns>
          <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
          <TableColumn fx:id="colDate" text="Date" prefWidth="120"/>
          <TableColumn fx:id="colAmount" text="Amount" prefWidth="120"/>
          <TableColumn fx:id="colCategory" text="Category" prefWidth="180"/>
          <TableColumn fx:id="colDescription" text="Description" prefWidth="340"/>
          <TableColumn fx:id="colType" text="Type" prefWidth="120"/>
        </columns>
      </TableView>
    </VBox>
  </center>
  <bottom>
    <HBox spacing="24" alignment="CENTER">
      <padding><Insets top="12" right="12" bottom="12" left="12"/></padding>
      <Label text="Income:"/><Label fx:id="lblIncome" style="-fx-font-weight:bold;"/>
      <Label text="Expense:"/><Label fx:id="lblExpense" style="-fx-font-weight:bold;"/>
      <Label text="Balance:"/><Label fx:id="lblBalance" style="-fx-font-weight:bold;"/>
    </HBox>
  </bottom>
</BorderPane>
